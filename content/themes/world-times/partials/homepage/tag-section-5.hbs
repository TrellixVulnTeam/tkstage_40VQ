{{#get "posts" limit="5" filter="tag:food"}}
<div class="col-lg-4">
    <div class="column-post-section post-group">
        <div class="post-group-title">
            <span>food</span>
        </div>
        {{#foreach posts visibility="all"}}
        {{#if @first}}
        <div class="large-post">
            <a href="{{url}}">
                <div class="featured-image-wrap">
                    <div class="featured-image{{^if feature_image}} no-image{{/if}}">
                        {{#if feature_image}}
                        <img srcset="{{img_url feature_image size="s"}} 300w,
                                    {{img_url feature_image size="m"}} 600w,
                                    {{img_url feature_image size="l"}} 1000w"
                            sizes="(max-width: 330px) 300px, (min-width: 768px) and (max-width: 991px) 1000px, 600px"
                            src="{{img_url feature_image size="m"}}"
                            alt="{{title}}"
                        />
                        {{/if}}
                    </div>
                    <div class="overlay">
                        <h2 class="title h4">{{title}}</h2>
                        <time class="date" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
                    </div>
                </div>
            </a>
        </div>
        {{else}}
        <div class="small-post clearfix">
            {{#if feature_image}}
            <a href="{{url}}">
                <div class="featured-image-wrap">
                    <div class="featured-image">
                        <img src="{{img_url feature_image size="xs"}}" alt="{{title}}" />
                    </div>
                </div>
            </a>
            {{/if}}
            <div class="content-wrap{{^if feature_image}} no-image{{/if}}">
                <h2 class="title h5"><a href="{{url}}">{{title}}</a></h2>
                <time class="date" datetime="{{date format="YYYY-MM-DD"}}" title="{{date format="DD MMMM, YYYY"}}">{{date format="MMMM DD, YYYY"}}</time>
            </div>
        </div>
        {{/if}}
        {{/foreach}}
    </div>
</div>
{{/get}}